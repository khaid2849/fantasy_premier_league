<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fpl_manager_team_tree" model="ir.ui.view">
        <field name="name">fpl.manager.team.tree</field>
        <field name="model">fpl.manager.team</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0" js_class="verify_manager_team_data_js">
                <field name="name"/>
                <field name="full_name"/>
                <field name="first_name" column_invisible="1"/>
                <field name="last_name" column_invisible="1"/>
                <field name="summary_overall_points" optional="show"/>
                <field name="summary_event_points" optional="show"/>
                <field name="summary_event_rank" optional="show"/>
            </list>
        </field>
    </record>

    <record id="fpl_manager_team_form" model="ir.ui.view">
        <field name="name">fpl.manager.team.form</field>
        <field name="model">fpl.manager.team</field>
        <field name="arch" type="xml">
            <form string="Manager Team" delete="0" create="0" edit="0">
                <header>
                    <button string="Verify Manager Data" class="btn-primary" type="object" name="action_verify_manager_data"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" disabled="disabled" special="cancel" 
                                invisible="used_wildcard"
                                class="oe_stat_button" icon="fa-exchange">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Used</span>
                                <span class="o_stat_text">Wildcard</span>
                            </div>
                        </button>
                        <button type="object" disabled="disabled" special="cancel"
                                invisible="used_free_hit"
                                class="oe_stat_button" icon="fa-random">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Used</span>
                                <span class="o_stat_text">Free Hit</span>
                            </div>
                        </button>
                            <button type="object" disabled="disabled" special="cancel"
                                invisible="used_bench_boost"
                                class="oe_stat_button" icon="fa-rocket">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Used</span>
                                <span class="o_stat_text">Bench Boost</span>
                            </div>
                        </button>
                            <button type="object" disabled="disabled" special="cancel"
                                invisible="used_triple_captain"
                                class="oe_stat_button" icon="fa-bars">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Used</span>
                                <span class="o_stat_text">Triple Captain</span>
                            </div>
                        </button>

                        <button type="object" disabled="disabled" special="cancel"
                                invisible="not used_wildcard"
                                class="oe_stat_button" icon="fa-exchange">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Not Used</span>
                                <span class="o_stat_text">Wildcard</span>
                            </div>
                        </button>
                        <button type="object" disabled="disabled" special="cancel"
                                invisible="not used_free_hit"
                                class="oe_stat_button" icon="fa-random">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Not Used</span>
                                <span class="o_stat_text">Free Hit</span>
                            </div>
                        </button>
                            <button type="object" disabled="disabled" special="cancel"
                                invisible="not used_bench_boost"
                                class="oe_stat_button" icon="fa-rocket">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Not Used</span>
                                <span class="o_stat_text">Bench Boost</span>
                            </div>
                        </button>
                        <button type="object" disabled="disabled" special="cancel"
                                invisible="not used_triple_captain"
                                class="oe_stat_button" icon="fa-bars">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value d-flex gap-1">Not Used</span>
                                <span class="o_stat_text">Triple Captain</span>
                            </div>
                        </button>

                        <button type="object" name="action_open_entry_history" class="oe_stat_button" icon="fa-book">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Manager History</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title mb24">
                        <h1>
                            <field name="name" class="text-break" default_focus="1"/>
                            <h5>
                                <field name="manager_id" class="text-muted fst-italic"/>
                            </h5>
                        </h1>
                        <div class="o_row me-3">
                            <field name="full_name"/>
                        </div>
                        <div class="o_row mt-2">
                            <field name="country_id" options="{'no_open': True}"/>
                        </div>
                    </div>

                    <group string="Personal Info">
                        <group>
                            <field name="email"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="joined_time"/>
                            <field name="favourite_team" options="{'no_create': True}"/>
                            <field name="years_active"/>
                        </group>
                    </group>
                    
                    <group string="Points &amp; Rankings">
                        <group>
                            <field name="summary_overall_points"/>
                            <field name="summary_overall_rank"/>
                        </group>
                        <group>
                            <field name="current_event"/>
                            <field name="summary_event_points" string="Current Gameweek points"/>
                            <field name="summary_event_rank" string="Current Gameweek rank"/>
                        </group>
                    </group>
                    
                    <group string="Transfer Info">
                        <group>
                            <field name="limit"/>
                            <field name="made"/>
                        </group>
                        <group>
                            <field name="bank"/>
                            <field name="value"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Picks">
                            <field name="pick_ids" nolabel="1">
                                <list>
                                    <field name="element_id" column_invisible="1"/>
                                    <field name="team_id" column_invisible="1"/>
                                    <field name="web_name" string="Player"/>
                                    <field name="team_display" string="Team"/>
                                    <field name="element_type_id" string="Position"/> 
                                    <field name="position" optional="hide"/>
                                    <field name="is_captain" string="Captain"/>
                                    <field name="is_vice_captain" string="Vice Captain"/>
                                    <field name="selling_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="purchase_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Chips">
                            <field name="manager_chip_ids" nolabel="1" options="{'no_open': True}">
                                <list>
                                    <field name="chip_id" column_invisible="1"/>
                                    <field name="show_name"/>
                                    <field name="played_by_entry" optional="hide"/>
                                    <field name="number" optional="hide"/>
                                    <field name="start_event" optional="hide"/>
                                    <field name="stop_event" optional="hide"/>
                                    <field name="chip_type" optional="hide"/>
                                    <field name="status_for_entry" widget="badge"
                                        decoration-success="status_for_entry == 'available'"
                                        decoration-danger="status_for_entry == 'used'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <group string="Leagues">
                        <notebook> 
                            <page string="Classic">
                                <field name="league_classic_ids" nolabel="1" domain="[('type', '=', 'classic')]">
                                    <list default_order="league_id asc">
                                        <field name="league_id" widget="handle"/>
                                        <field name="name"/>
                                        <field name="entry_rank" column_invisible="1"/>
                                        <field name="entry_rank_form"/>
                                        <field name="entry_last_rank" string="Last rank"/>
                                        <field name="overall_points"/>
                                    </list>
                                </field>
                            </page>
                            <page string="H2H"> 
                                <field name="league_h2h_ids" nolabel="1" domain="[('type', '=', 'h2h')]">
                                    <list default_order="league_id asc">
                                        <field name="league_id" widget="handle"/>
                                        <field name="name"/>
                                        <field name="entry_rank" column_invisible="1"/>
                                        <field name="entry_rank_form"/>
                                        <field name="entry_last_rank"/>
                                    </list>
                                    </field>
                                </page> 
                        </notebook>
                    </group>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="fpl_manager_team_view_action" model="ir.actions.act_window">
        <field name="name">FPL Manager Team</field>
        <field name="res_model">fpl.manager.team</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('fantasy_premier_league.fpl_manager_team_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('fantasy_premier_league.fpl_manager_team_form')})]"/>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
