<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_get_boostrap_static" model="ir.cron">
        <field name="name">Cron Get Data from Boostrap Static API</field>
        <field name="model_id" ref="fantasy_premier_league.model_fpl_import_data"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="state">code</field>
        <field name="code">model.cron_get_data_boostrap_static()</field>
        <field name="active">False</field>
    </record>

    <record id="ir_cron_get_gameweek_fixtures" model="ir.cron">
        <field name="name">Cron Get Gameweek Fixutres Data API</field>
        <field name="model_id" ref="fantasy_premier_league.model_fpl_gameweek_fixtures"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="state">code</field>
        <field name="code">model.cron_get_data_gameweek_fixutres()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_download_player_avatar" model="ir.cron">
        <field name="name">Cron Download Player Avatar</field>
        <field name="model_id" ref="fantasy_premier_league.model_fpl_import_data"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="state">code</field>
        <field name="code">model.download_player_avatar()</field>
        <field name="active">False</field>
    </record>
</odoo>
