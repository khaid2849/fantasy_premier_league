                            <div>
                                <field name="photo" widget="image"/>
                            </div>
                            <div style="display: flex; flex-direction: column; justify-content: center; gap: 8px; padding: 12px; margin-left: 18px">
                                <div>
                                    <field name="plural_name" style="color: #37003c; font-size: 22px;"/>
                                </div>
