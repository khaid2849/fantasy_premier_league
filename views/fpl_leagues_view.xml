<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fpl_leagues_tree" model="ir.ui.view">
        <field name="name">fpl.leagues.tree</field>
        <field name="model">fpl.leagues</field>
        <field name="arch" type="xml">
            <list string="Leagues" create="0" edit="0" delete="0" js_class="fpl_list_view_custom_hide_search">
                <field name="name" string="Leage"/>
                <field name="entry_rank_form" string="Current Rank"/>
                <field name="entry_last_rank" string="Last Rank"/>
                <field name="type" column_invisible="1"/>
                <field name="entry_rank" column_invisible="1"/>
                <field name="entry_last_rank" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_fpl_leagues_form" model="ir.ui.view">
        <field name="name">fpl.leagues.form</field>
        <field name="model">fpl.leagues</field>
        <field name="arch" type="xml">
            <form string="League" create="0" edit="0" delete="0">
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                            <field name="name" class="text-break" default_focus="1"/>
                        </h1>
                    </div>

                    <group>
                        <field name="rank_count" string="Total Entries"/>
                        <field name="last_updated_data"/>

                    </group>

                    <field name="is_august" invisible="1"/>
                    <field name="is_september" invisible="1"/>
                    <field name="is_october" invisible="1"/>
                    <field name="is_november" invisible="1"/>
                    <field name="is_december" invisible="1"/>
                    <field name="is_january" invisible="1"/>
                    <field name="is_february" invisible="1"/>
                    <field name="is_march" invisible="1"/>
                    <field name="is_april" invisible="1"/>
                    <field name="is_may" invisible="1"/>


                    <group string="Standing"/>
                    <notebook>
                        <page string="Overall">
                            <field name="standing_result_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="August" invisible="not is_august">
                            <field name="standing_result_august_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="September" invisible="not is_september">
                            <field name="standing_result_september_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="October" invisible="not is_october">
                            <field name="standing_result_october_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="November" invisible="not is_november">
                            <field name="standing_result_november_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="December" invisible="not is_december">
                            <field name="standing_result_december_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="January" invisible="not is_january">
                            <field name="standing_result_january_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="February" invisible="not is_february">
                            <field name="standing_result_february_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="March" invisible="not is_march">
                            <field name="standing_result_march_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="April" invisible="not is_april">
                            <field name="standing_result_april_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="May" invisible="not is_may">
                            <field name="standing_result_may_ids" nolabel="1" widget="one2many" create="0" edit="0" delete="0">
                                <list> 
                                    <field name="rank_form"/>
                                    <field name="name"/>
                                    <field name="event_total" string="GW"/>
                                    <field name="total" string="Total"/>
                                    <field name="last_rank" column_invisible="1"/>
                                    <field name="rank" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="view_fpl_leagues_search" model="ir.ui.view">
        <field name="name">fpl.leagues.search</field>
        <field name="model">fpl.leagues</field>
        <field name="arch" type="xml">
            <search string="Leagues">
                <group expand="0" string="Group By">
                    <filter string="League" name="group_by_type" domain="[]" context="{'group_by': 'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="fpl_leagues_view_action" model="ir.actions.act_window">
        <field name="name">Leagues</field>
        <field name="res_model">fpl.leagues</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_type': 1}</field>
    </record>
</odoo>